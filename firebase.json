{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/x402",
        "function": "x402Health"
      },
      {
        "source": "/x402/**",
        "function": "x402Health"
      },
      {
        "source": "/tools/list",
        "function": "toolsList"
      },
      {
        "source": "/tools/call",
        "function": "toolsCall"
      },
      {
        "source": "/query",
        "function": "x402Query"
      },
      {
        "source": "/status/**",
        "function": "x402Status"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
